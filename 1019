import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int tempo = sc.nextInt();		
		int hora = tempo/3600;
		int min = (tempo%3600)/60;
		int seg = (tempo%3600)%60;
		System.out.println(hora + ":" + min + ":" + seg);

	}
}
